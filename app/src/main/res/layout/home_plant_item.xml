<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="14px"
    android:paddingVertical="15px"
    android:background="@drawable/item_border"
    >


    <TextView
        android:id="@+id/home_plant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="植物名"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="70px"
        app:layout_constraintEnd_toStartOf="@+id/home_plant_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_plant_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="最近の日時"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="70px"
        app:layout_constraintEnd_toStartOf="@+id/home_plant_num"
        app:layout_constraintStart_toEndOf="@+id/home_plant_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_plant_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="回数"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="70px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_plant_date"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>